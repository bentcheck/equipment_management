<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="report_assignment_template">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="o">
        <div class="page">
          <p>
            Equipment <span t-field="o.name"/> from supplier <span t-field="o.supplier"/>
            with acquisition price <span t-field="o.acquisition_price"/>
            has been assigned to <span t-field="o.assigned_person"/>
            with assignment period from <span t-field="o.assigned_from"/> to <span t-field="o.assigned_to"/>.
          </p>
          <br/>
          <p>Signature: _________________________</p>
        </div>
      </t>
    </t>
  </template>

  <record id="report_assignment_action" model="ir.actions.report">
    <field name="name">Assignment Report</field>
    <field name="model">it.equipment</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">it_equipment_management.report_assignment_template</field>
    <field name="report_file">it_equipment_management.report_assignment_template</field>
    <field name="print_report_name">'Assignment Report'</field>
    <field name="binding_model_id" eval="False"/>
    <field name="binding_type">report</field>
  </record>
</odoo>